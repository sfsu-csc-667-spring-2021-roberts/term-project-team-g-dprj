  link(rel='stylesheet' href='/stylesheets/lobby.css')
  
block content
  .container.py-5 
    .row.justify-content-md-center 
      .col-md-auto 
        h1 Waiting for game to start...
    .row.justify-content-md-center.py-4 
      .col-md-auto(style="text-align:center")
